<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    >

    <!-- Toolbar -->
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:padding="16dp"
        android:text="Thanh Toán"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center" />

    <!-- Container cho form -->
    <LinearLayout
        android:id="@+id/form_container"

        android:layout_width="415dp"
        android:layout_height="562dp"
        android:layout_below="@id/toolbar_title"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Thông Tin Người Mua Hàng"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Nhập tên người dùng -->
        <EditText
            android:id="@+id/edt_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Nhập tên người dùng" />

        <!-- Email -->
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/_SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Số điện thoại"
            android:inputType="phone" />

        <!-- Địa chỉ -->
        <EditText
            android:id="@+id/edt_dia_chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Địa chỉ" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cb_thanhtoankhinhanhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Chú ý: Thanh toán khi nhận hàng." />

        <!-- Nút Trở Về và Xác Nhận -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tro_ve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#000000"
                android:text="TRỞ VỀ"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_xac_nhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="XÁC NHẬN"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
