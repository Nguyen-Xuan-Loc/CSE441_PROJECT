<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nentt"

    android:orientation="vertical">

    <!-- Toolbar cho giỏ hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFEB3B"
        android:titleTextColor="@android:color/white">

        <Button
            android:id="@+id/btn_thoat"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FFEB3B"
            android:drawableLeft="@drawable/icthoat" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:text="Thông Tin"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>
    <!-- Khung thông tin địa chỉ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="16dp">




        <TextView
            android:layout_width="333dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#99FFFFFF"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Thông Tin Về Chúng Tôi"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:background="#99FFFFFF"
            android:drawableBottom="@drawable/ic_map" />

        <TextView
            android:layout_width="333dp"
            android:layout_height="160dp"
            android:background="#99FFFFFF"
            android:text="Địa chỉ:175 Tây Sơn, Trung Liệt, Đống Đa, Hà Nội."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"
            android:padding="25dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center">

        <TextView
            android:layout_width="333dp"
            android:layout_height="220dp"
            android:gravity="center"
            android:background="@drawable/nenduoi"
            />
    </LinearLayout>

</LinearLayout>
